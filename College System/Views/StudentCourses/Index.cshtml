@model IEnumerable<College_System.Models.StudentCours>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", new  {id=ViewBag.StudentID })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cours.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Student.Name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cours.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Student.Name)
        </td>
        <td>
            
            @Html.ActionLink("Details", "Details", new { id = item.StudentID, CourseID = item.CourseID, Year = item.Year }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.StudentID, CourseID = item.CourseID, Year = item.Year })
        </td>
    </tr>
}

</table>
